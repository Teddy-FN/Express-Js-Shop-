<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if (prods.length > 0) { %>
        <ul>
        <% prods.forEach(p => { %>
          <li>
            <p><%= p.productData.title %> (<%= p.qty %>)</p>
            <form action="/cart-delete-item" method="POST">
              <input type="hidden" value="<%= p.productData.id %>" name="id" id="id">
              <button type="submit" class="btn">Delete Item In Cart</button>
            </form>
          </li>  
        <% }) %>
        </ul>
      <% } else { %>
        <h1>No Product Cart</h1>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
