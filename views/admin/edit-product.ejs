<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <form class="product-form" action="<% if (editing) { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<% if (editing) { %><%= prod.title %><% } %>" />
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= prod.imageUrl %><% } %>" />
        </div>
        <div class="form-control">
          <label for="price">price</label>
          <input type="number" name="price" id="price" value="<% if (editing) { %><%= prod.price %><% } %>" step="0.01" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" cols="30" rows="10"><% if (editing) { %><%= prod.description %><% } %></textarea>
        </div>

        <% if (editing) { %> 
          <input type="hidden" name="id" id="id" hidden value="<% if (editing) { %><%= prod.id %><% } %>">
        <% } %>

        <button class="btn" type="submit">
          <% if (editing) { %>
            Updated Product
          <% } else { %>
            Add Product
          <% } %>
        </button>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
